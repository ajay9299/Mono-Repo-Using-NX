{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@org/source"],
    "paths": {
      "@org/shared-dto": ["shared-dto/src/index.ts"],
      "@org/shared-events": ["shared-events/src/index.ts"],
      "@org/aws-clients": ["aws-clients/src/index.ts"],
      "@org/shared-redis": ["shared-redis/src/index.ts"]
    }
  }
}
